/* =================================== */
/* Responsive 770px - 959px */


@media screen and (min-width: 770px) and (max-width: 959px) {
  body {

  }

  .ticket-options {
    flex-direction:column;

    .single-ticket-option {
      width:100%;

      &:nth-child(2) {
        border-right:0px;
        border-bottom: 6px white solid;
        border-left:0px;
        border-top: 6px white solid;
      }
    }

    h1 {
      font-size: 50px;
    }

    .tickets-button {
      margin-top: 20px;
    }
  }

  .stuck, .sticky-wrapper, .nav-top, .nav-bottom {
    display:none;
  }

  .content {
    width:90%;
  }

  .tour-buttons {
    width:100%;
  }
}



/* =================================== */
/* Responsive 960px - 1219px */


@media screen and (min-width: 960px) and (max-width: 1349px){
  body {

  }

  .mobile-logo, .mobile-nav {
    display:none;
  }


  .content, .tour-buttons {
    width:90%;
  }
}

/* =================================== */
/* Responsive 1220px - ∞ */


@media screen and (min-width: 1350px) {

  .mobile-logo, .mobile-nav {
    display:none;
  }

  .home {

    p {
      font-size:40px;
      line-height:60px;
    }
  }
}